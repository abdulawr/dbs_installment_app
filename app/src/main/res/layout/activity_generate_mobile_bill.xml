<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DBS_Shop_Activity.GenerateMobileBill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/stockID"
            android:background="@drawable/btn_back"
            android:layout_marginRight="5dp"
            android:paddingLeft="12dp"
            android:layout_marginLeft="10dp"
            android:hint="Enter ID..."
            android:inputType="number"
            android:layout_height="45dp"/>

        <android.widget.Button
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:textAllCaps="false"
            android:onClick="Search"
            android:textColor="@color/white"
            android:background="@drawable/bb_back"
            android:layout_gravity="center_vertical"
            android:text="Search"
            android:layout_height="39dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:padding="7dp"
                     android:textSize="18dp"
                     android:textStyle="bold"
                     android:gravity="center"
                     android:textColor="@color/white"
                     android:text="Mobile Details"
                     android:background="@color/purple_500"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="ID"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/ID"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="ID"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Fingerprint"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/fringerprint"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Fingerprint"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Back Camera"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/backCamera"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Back Camera"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Ram"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/ram"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Ram"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Sim Type"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/sim"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Sim"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Front Camera"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/frtCamera"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Front Camera"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Memory"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/MemoryID"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Memory"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Network"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/network"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Network"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Company"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:paddingRight="10dp"
                    android:id="@+id/cmpID"
                    android:layout_height="wrap_content"
                    android:text="Company"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Price"/>

                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:textSize="16dp"
                    android:id="@+id/price"
                    android:paddingRight="10dp"
                    android:layout_height="wrap_content"
                    android:text="Price"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="7dp"
                    android:textSize="18dp"
                    android:layout_marginTop="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Customer Details"
                    android:background="@color/purple_500"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btn_back"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="12dp"
                    android:id="@+id/cname"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Customer name..."
                    android:inputType="text"
                    android:layout_height="45dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/cmobile"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_back"
                    android:layout_marginRight="5dp"
                    android:maxLength="12"
                    android:paddingLeft="12dp"
                    android:layout_marginLeft="10dp"
                    android:hint="Customer mobile..."
                    android:inputType="number"
                    android:layout_height="45dp"/>

                <android.widget.Button
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_weight="0"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:textAllCaps="false"
                    android:onClick="SubmitRequest"
                    android:textColor="@color/white"
                    android:background="@drawable/bb_back"
                    android:layout_gravity="center_vertical"
                    android:text="Submit"
                    android:layout_height="39dp"/>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>