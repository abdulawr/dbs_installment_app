<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="7dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="7dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="match_parent">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:paddingLeft="10dp"
                    android:background="@drawable/row_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:textColor="#4CAF50"
                    android:id="@+id/amount"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </TableRow>


            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:paddingLeft="10dp"
                    android:background="@drawable/row_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/date"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </TableRow>


            <TableRow
                android:id="@+id/type_row"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:paddingLeft="10dp"
                    android:background="@drawable/row_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/type"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </TableRow>


            <TableRow
                android:visibility="gone"
                android:id="@+id/trans_row">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trans Type"
                    android:paddingLeft="10dp"
                    android:background="@drawable/row_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/transaction_type"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </TableRow>


            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App ID"
                    android:id="@+id/appID_title"
                    android:paddingLeft="10dp"
                    android:background="@drawable/row_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/appID"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </TableRow>


            <TableRow
                android:id="@+id/exp_row"
                android:visibility="gone">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exp Type"
                    android:paddingLeft="10dp"
                    android:background="@drawable/row_back"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--------"
                    android:id="@+id/expence_type"
                    android:textSize="17sp"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"/>

            </TableRow>



        </TableLayout>


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="8dp"
            android:id="@+id/received"
            android:src="@drawable/payment_received"
            android:layout_gravity="right"
            android:background="@color/purple_700"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>